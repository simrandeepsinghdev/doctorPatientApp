<h1 class="text-center mt-4">Doctor Dashboard</h1>

<h2 class="text-center mb-4">Welcome, <%= @doctor_name %>!</h2> <!-- Displaying the doctor's name -->


<div class="container">
  <%= line_chart @patients_grouped_by_day.map { |date, count| [date.to_time, count] }, 
      xtitle: 'Date', ytitle: 'Number of Patients', 
      title: 'Patients Registered Over Time',
      height: "400px",
      width: "100%" %>
</div>

<div class="container mt-4">
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Contact</th>
        <th>Address</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.name %></td>
          <td><%= patient.age %></td>
          <td><%= patient.contact %></td>
          <td><%= patient.address %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
