<h1 class="text-center mt-4">Receptionist Dashboard</h1>
<h2 class="text-center mb-4">Welcome, <%= current_user.name if current_user %></h2> 

<div class="container">
  

  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Contact</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.name %></td>
          <td><%= patient.age %></td>
          <td><%= patient.contact %></td>
          <td><%= patient.address %></td>
          <td>
            <%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Show', patient, method: :show, data: {  }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
