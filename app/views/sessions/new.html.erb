<h1 class="text-center mb-4 mt-4">Login</h1>

<div class="container">
  <div class="row justify-content-center mt-5"> <!-- Added mt-5 for top margin -->
    <div class="col-md-6"> 
      <%= form_with(url: login_path, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :email, class: 'form-label' %>
          <%= form.email_field :email, class: 'form-control', placeholder: 'Enter your email' %>
        </div>

        <div class="form-group">
          <%= form.label :password, class: 'form-label' %>
          <%= form.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>
        </div>

        <div>
          <%= form.submit 'Login', class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
