<h1 class="text-center mb-4 mt-4"><%= action_name.capitalize %> Patient</h1>

<div class="container">
  <%= form_with(model: @patient, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :age, class: 'form-label' %>
      <%= form.number_field :age, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :contact, class: 'form-label' %>
      <%= form.text_field :contact, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :address, class: 'form-label' %>
      <%= form.text_area :address, class: 'form-control' %>
    </div>

    <div>
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
