<h1 class="text-center mt-4">Patients</h1>

<div class="container">
  <%= link_to 'Register New Patient', new_patient_path, class: 'btn btn-success mb-3' %>

  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Contact</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.name %></td>
          <td><%= patient.age %></td>
          <td><%= patient.contact %></td>
          <td><%= patient.address %></td>
          <td>
            <%= link_to 'Show', patient_path(patient), class: 'btn btn-info btn-sm' %> |
            <%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-primary btn-sm' %> |
            <%= link_to 'Delete', patient, method: :delete, data: { confirm: 'Are you sure?', turbo_method: :delete, turbo: true }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
